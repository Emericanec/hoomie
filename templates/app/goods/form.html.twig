{% extends 'admin.html.twig' %}

{% block title %}Hoomie{% endblock %}

{% block body %}
    <section class="content">
        <br>
        <div class="row">
            <div class="col-md-6 offset-md-3 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Add goods</h3>
                    </div>
                    <form role="form" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" class="form-control" placeholder="Enter title" name="title" value="{{ form.title }}">
                            </div>
                            <div class="form-group">
                                <label>URL</label>
                                <input type="text" class="form-control" placeholder="Enter url" name="url" value="{{ form.url }}">
                            </div>
                            <div class="form-group">
                                <label>Price</label>
                                <input type="text" class="form-control" placeholder="Enter price" name="price" value="{{ form.price }}">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" rows="3" placeholder="Enter description..." spellcheck="false" name="description">{{ form.description }}</textarea>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}